<Window x:Class="TTSExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TTS示例" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition  Height="auto"/>
            <RowDefinition  Height="auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textInputer" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto">Hello World! 你好，世界！</TextBox>
        <Slider x:Name="speed" Grid.Row="1" Minimum="-5" Maximum="5" Value="0" SmallChange="1" AutoToolTipPlacement="TopLeft" />
        <Button x:Name="StartRead" Click="StartRead_Click" Grid.Row="2">开始朗读</Button>
    </Grid>
</Window>
